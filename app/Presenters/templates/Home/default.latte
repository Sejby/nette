{block content}
<div id="content">
	<h1> Hello World! </h1>
	{foreach $posts as $post}
		<div class="post">
		<div class="date">{$post->created_at|date:'F j, Y'}</div>

		<a n:href="Post:show $post->id"><h2>{$post->title}</h2></a>

		<div>{$post->content|truncate:256}</div>
	</div>
	{/foreach}
	<a n:href="Edit:create" n:if="$user->isLoggedIn()">Přidat příspěvek</a>
</div>

